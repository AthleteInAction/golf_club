<ol class="breadcrumb">
  <li>
    <%= link_to 'Home',root_path %>
  </li>
  <li class="active">Courses</li>
</ol>

<tabset>
  <tab heading="Courses">

    <table class="table table-striped table-bordered table-hover no-top outside">
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Country</th>
          <th>Zip</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
        <tr>
          <td><%= link_to course.name,course %></td>
          <td><%= course.address %></td>
          <td><%= course.city %></td>
          <td><%= course.state %></td>
          <td><%= course.country %></td>
          <td><%= course.zip %></td>
          <td width="1"><%= link_to 'Edit', edit_course_path(course),class: 'btn btn-warning btn-sm' %></td>
          <td width="1"><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-sm' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </tab>
</tabset>